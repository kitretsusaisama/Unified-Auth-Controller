{
	"info": {
		"_postman_id": "e5c7036d-1234-4b5a-9012-abcdef123456",
		"name": "Enterprise SSO Platform (RBAC/ABAC)",
		"description": "Production-ready API collection including OIDC PKCE flow, Advanced Auth Flow, and RBAC Management.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"identifier_type\": \"email\",\n    \"email\": \"user@example.com\",\n    \"password\": \"SecurePass123!\",\n    \"tenant_id\": \"{{tenant_id}}\",\n    \"require_verification\": false\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"access_token\", jsonData.access_token);",
									"pm.environment.set(\"refresh_token\", jsonData.refresh_token);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"SecurePass123!\",\n    \"tenant_id\": \"{{tenant_id}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					}
				}
			]
		},
		{
			"name": "Authorization (RBAC)",
			"item": [
				{
					"name": "Create Role",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" },
							{ "key": "Authorization", "value": "Bearer {{access_token}}" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Editor\",\n    \"description\": \"Can edit content\",\n    \"permissions\": [\"content:edit\", \"content:view\"],\n    \"scope\": \"tenant\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/roles",
							"host": ["{{base_url}}"],
							"path": ["auth", "roles"]
						}
					}
				},
				{
					"name": "Get Role",
					"request": {
						"method": "GET",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{access_token}}" }
						],
						"url": {
							"raw": "{{base_url}}/auth/roles/{{role_id}}",
							"host": ["{{base_url}}"],
							"path": ["auth", "roles", "{{role_id}}"]
						}
					}
				}
			]
		},
		{
			"name": "Universal Workflow (Smart Automation)",
			"item": [
				{
					"name": "1. Start Flow (Login)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"flow_id\", jsonData.flow_id);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"flow_type\": \"login\",\n    \"tenant_id\": \"{{tenant_id}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/flow/start",
							"host": ["{{base_url}}"],
							"path": ["auth", "flow", "start"]
						}
					}
				},
				{
					"name": "2. Submit Identifier (Universal)",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"action\": \"submit_identifier\",\n    \"payload\": { \"identifier\": \"user@example.com\" }\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/flow/{{flow_id}}/submit",
							"host": ["{{base_url}}"],
							"path": ["auth", "flow", "{{flow_id}}", "submit"]
						}
					}
				},
				{
					"name": "3. Submit Password (Universal)",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"action\": \"submit_password\",\n    \"payload\": { \"password\": \"SecurePass123!\" }\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/flow/{{flow_id}}/submit",
							"host": ["{{base_url}}"],
							"path": ["auth", "flow", "{{flow_id}}", "submit"]
						}
					}
				}
			]
		},
		{
			"name": "OIDC Provider (PKCE)",
			"item": [
				{
					"name": "1. Authorize",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789-._~';",
									"const random = (length) => Array.from({length}, () => chars[Math.floor(Math.random() * chars.length)]).join('');",
									"pm.environment.set('code_verifier', random(43));",
									"const challenge = CryptoJS.SHA256(pm.environment.get('code_verifier')).toString(CryptoJS.enc.Base64).replace(/\\+/g, '-').replace(/\\//g, '_').replace(/=+$/, '');",
									"pm.environment.set('code_challenge', challenge);",
									"pm.environment.set('state', random(16));",
									"pm.environment.set('nonce', random(16));"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/auth/authorize?response_type=code&client_id=client_123&redirect_uri=http://localhost:3000/cb&scope=openid profile email&state={{state}}&nonce={{nonce}}&code_challenge={{code_challenge}}&code_challenge_method=S256",
							"host": ["{{base_url}}"],
							"path": ["auth", "authorize"],
							"query": [
								{ "key": "response_type", "value": "code" },
								{ "key": "client_id", "value": "client_123" },
								{ "key": "redirect_uri", "value": "http://localhost:3000/cb" },
								{ "key": "scope", "value": "openid profile email" },
								{ "key": "state", "value": "{{state}}" },
								{ "key": "nonce", "value": "{{nonce}}" },
								{ "key": "code_challenge", "value": "{{code_challenge}}" },
								{ "key": "code_challenge_method", "value": "S256" }
							]
						}
					}
				},
				{
					"name": "2. Token Exchange",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/x-www-form-urlencoded" }
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{ "key": "grant_type", "value": "authorization_code" },
								{ "key": "code", "value": "{{auth_code}}" },
								{ "key": "client_id", "value": "client_123" },
								{ "key": "redirect_uri", "value": "http://localhost:3000/cb" },
								{ "key": "code_verifier", "value": "{{code_verifier}}" }
							]
						},
						"url": {
							"raw": "{{base_url}}/auth/token",
							"host": ["{{base_url}}"],
							"path": ["auth", "token"]
						}
					}
				}
			]
		},
		{
			"name": "System",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/health",
							"host": ["{{base_url}}"],
							"path": ["health"]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		},
        {
            "key": "tenant_id",
            "value": "9992003c-e093-4c07-975d-44639ceb36d6",
            "type": "string"
        }
	]
}
